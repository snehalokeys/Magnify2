<body>

<div class="container">
  <h1>Minimal Gratitude</h1>
  <p>Click anywhere — 10 times within 2 seconds — to reveal a quiet thank-you.</p>
</div>

<div id="appreciation"><span>Appreciated.</span></div>

<script>
(function(){
  const REQUIRED = 10;
  const WINDOW = 2000; // 2 seconds
  let clicks = [];
  let showing = false;
  const appreciation = document.getElementById('appreciation');

  // Ripple creation
  function createRipple(x, y) {
    const r = document.createElement('div');
    r.className = 'ripple';
    r.style.left = x + 'px';
    r.style.top = y + 'px';
    document.body.appendChild(r);
    requestAnimationFrame(() => {
      r.style.transform = 'translate(-50%, -50%) scale(2)';
      r.style.opacity = '0';
    });
    setTimeout(() => r.remove(), 160);
  }

  // Show appreciation
  function showAppreciation() {
    if (showing) return;
    showing = true;
    appreciation.classList.add('show');
    setTimeout(() => {
      appreciation.classList.remove('show');
      showing = false;
    }, 2000);
    clicks = [];
  }

  // Click listener
  document.addEventListener('click', e => {
    createRipple(e.clientX, e.clientY);
    const now = Date.now();
    clicks.push(now);
    clicks = clicks.filter(ts => ts > now - WINDOW);
    if (clicks.length >= REQUIRED) {
      showAppreciation();
    }
  });
})();
</script>

</body>
</html>