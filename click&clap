  opacity: 0;
}

/* Animation */
@keyframes fadeInOut {
  0% { opacity: 0; transform: translateY(6px) scale(0.98); }
  50% { opacity: 1; transform: translateY(0) scale(1); }
  100% { opacity: 0; transform: translateY(-6px) scale(0.98); }
}
