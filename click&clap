  opacity: 0.85;
  line-height: 1.6;
}

/* Ripple effect */
.ripple {
  position: fixed;
  width: 8px;
  height: 8px;
  background: var(--accent);
  border-radius: 4px;
  transform: translate(-50%, -50%) scale(1);
  opacity: 0.9;
  pointer-events: none;
  transition: transform 150ms ease-out, opacity 150ms linear;
  z-index: 10;
}

/* Appreciation overlay */
#appreciation {
  position: fixed;
  inset: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  pointer-events: none;
  z-index: 20;
}
